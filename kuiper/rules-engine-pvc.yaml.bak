apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: kuiper-data
spec:
  storageClassName: local-path
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 128Mi
  selector:
    matchLabels:
      name: kuiper-data
---
