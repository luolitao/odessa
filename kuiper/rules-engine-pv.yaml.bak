apiVersion: v1
kind: PersistentVolume
metadata:
  name: kuiper-data
  labels: 
    name: kuiper-data
spec:
  capacity:
    storage: 128Mi
  accessModes:
    - ReadWriteOnce
  storageClassName: local-path
  local:
    path: /mnt/edgex-kuiper/data
    # type: DirectoryOrCreate
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values: 
          - dev9
          - dev6
          - dev7
---
